<%- include("partials/header") -%>
    <div class="container">
        <div class="row ">
            <h1 class="py-5 text-center">Compose Post</h1>
            <div class="col-12 text-center d-flex justify-content-center ">
                <form method="POST" action="/compose">
                    <input type="text" class="form-control form my-2" name="title" placeholder="Title" required>
                    <textarea class="form-control form my-4" name="content" id="post1" cols="30" rows="10" placeholder="Post something" required></textarea>
                    <button type="submit" class="btn btn-info my-3 ">Add Post</button>
                </form>
            </div>
        </div>
    </div>
    <%- include("partials/footer") -%>